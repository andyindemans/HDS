{
    "title": "System Monitoring Dashboard",
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "type": "gauge",
        "title": "CPU Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "percentage",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 }
      },
      {
        "type": "gauge",
        "title": "RAM Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "percentage",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 }
      },
      {
        "type": "gauge",
        "title": "Disk Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{fstype!=\"tmpfs\",mountpoint!=\"/var/lib/docker/overlay2\"} - node_filesystem_free_bytes{fstype!=\"tmpfs\",mountpoint!=\"/var/lib/docker/overlay2\"}) / node_filesystem_size_bytes{fstype!=\"tmpfs\",mountpoint!=\"/var/lib/docker/overlay2\"} * 100",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "percentage",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 }
      },
      {
        "type": "gauge",
        "title": "CPU Temperature",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "node_hwmon_temp_celsius",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "celsius",
            "thresholds": {
              "mode": "percentage",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 85 }
              ]
            }
          }
        },
        "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 }
      },
      {
        "type": "timeseries",
        "title": "Network Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m]) + rate(node_network_transmit_bytes_total[5m])",
            "refId": "E"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 }
      },
      {
        "type": "timeseries",
        "title": "Docker Containers Running",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count(container_last_seen{image!=\"\",name=~\".+\"})",
            "refId": "F"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 }
      }
    ]
  }